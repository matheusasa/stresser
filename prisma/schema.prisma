generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // ID único para cada usuário
  name      String? // Nome do usuário
  user      String   @unique // Nome de usuário (único)
  email     String   @unique // Endereço de email (único)
  password  String // Senha do usuário (armazenada como hash)
  image     String? // URL da imagem de perfil do usuário
  createdAt DateTime @default(now()) // Data de criação do usuário
  updatedAt DateTime @updatedAt // Data de última atualização

  @@map("users") // Opcional: nome da tabela no banco de dados
}
