generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Attack {
  id          Int      @id @default(autoincrement())
  ipv4        String   @map("ipv4_address")
  ipRange     String?  @map("ip_range")
  port        Int      @map("port")
  time        Int      @map("attack_time")
  protocol    String   @map("protocol")
  method      String   @map("method")
  concurrents Int      @map("concurrents")
  running     Boolean  @default(false)
  createdAt   DateTime @default(now())
  geo String?

  userId String // ID do usu√°rio que iniciou o ataque
  user   User   @relation(fields: [userId], references: [id])

  @@map("attacks")
}

model User {
  id        String   @id @default(uuid())
  name      String?
  user      String   @unique
  email     String   @unique
  password  String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attacks Attack[] // Relacionamento de um para muitos com Attack

  @@map("users")
}
